#include <bits/stdc++.h>
using namespace std;
class Rectangle{
    public:
    int l, b;
    Rectangle(){
        l = 0;
        b =0;
    }
    Rectangle(int length, int breadth){
        l = length;
        b = breadth;
    }
    Rectangle(int x){
        l = x;
        b = x;
    }
    int area(){
        return l*b;
    }
};
int main() {
	// your code goes here
    Rectangle r1;
    Rectangle r2(5);
    Rectangle r3(4,8);
    cout<<r1.area()<<endl;
    cout<<r2.area()<<endl;
    cout<<r3.area()<<endl;
}
