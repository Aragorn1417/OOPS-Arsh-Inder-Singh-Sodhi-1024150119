#include <bits/stdc++.h>
using namespace std;
class Rectangle{
    public:
    int l, b;
    Rectangle(int length=2, int breadth=2){
        l = length;
        b = breadth;
    }
    int area(){
        return l*b;
    }
    ~Rectangle(){
        cout<<"In destructor"<<endl;
    }
};
int main() {
	// your code goes here
	Rectangle r[3];
	r[0] = Rectangle();
	r[1] = Rectangle(1);
	r[2] = Rectangle(4,5);
    cout<<r[0].area()<<endl;
    cout<<r[1].area()<<endl;
    cout<<r[2].area()<<endl;
}
